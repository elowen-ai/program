{
    "compilerOptions": {
        "rootDir": "./",
        "declarationDir": "./dist",
        "outDir": "./dist/types",
        "types": ["mocha", "chai"],
        "typeRoots": ["./node_modules/@types"],
        "lib": ["es2015"],
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDeclarationOnly": true
    },
    "include": ["app/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}
